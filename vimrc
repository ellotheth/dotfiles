set nocompatible

set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

set nowrap
set autoindent
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smarttab
set backspace=indent,eol,start
set colorcolumn=80
set textwidth=79

syntax on
filetype on
filetype plugin on
filetype indent on
set number
set showmatch
"set ruler
set laststatus=2
set showmode

set autoread
set hidden

set directory=~/.vim/tmp,/var/tmp,/tmp

set incsearch

